{
  "compilerOptions": {
    "target": "ES2016",
    "lib": ["DOM", "ES2016"],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": false,
    "checkJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*.ts", "esbuild.config.js"],
  "exclude": ["node_modules", "dist"]
}
